<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9F3"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Recipe Image -->
        <ImageView
            android:id="@+id/recipeImage"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:contentDescription="Recipe Image"
            android:background="@drawable/rounded_corners"
            android:elevation="4dp" />

        <!-- Recipe Title -->
        <TextView
            android:id="@+id/recipeTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Recipe Title"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- Ingredients Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ðŸ¥• Ingredients"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#D35400" />

        <TextView
            android:id="@+id/ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingredients list here"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#424242"
            android:layout_marginTop="6dp" />

        <!-- Steps Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ðŸ‘¨â€ðŸ³ Basic Steps"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#388E3C" />

        <TextView
            android:id="@+id/steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Recipe steps here"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#424242"
            android:layout_marginTop="6dp" />

        <!-- Detailed Making Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="ðŸ”¥ Making Steps (How to Cook)"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#E64A19" />

        <TextView
            android:id="@+id/makingSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detailed making steps will appear here."
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#424242"
            android:layout_marginTop="6dp" />

    </LinearLayout>
</ScrollView>
