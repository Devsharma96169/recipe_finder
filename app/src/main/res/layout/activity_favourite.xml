<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/favLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF8E1"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header with Back Button, Title, and Menu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp">

        <!-- ðŸ”™ Back Button -->
        <ImageButton
            android:id="@+id/btnBackHome"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentStart="true"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back to Home"
            android:padding="4dp"
            android:src="?attr/homeAsUpIndicator"
            app:tint="#E65100" />

        <!-- â¤ï¸ Title -->
        <TextView
            android:id="@+id/titleFav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â¤ï¸ My Favourite Recipes"
            android:textColor="#E65100"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:padding="8dp" />

        <!-- â˜° Toggle Menu Button (optional) -->
        <ImageButton
            android:id="@+id/menuToggle"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="10dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Menu"
            android:padding="4dp"
            android:src="@drawable/menu1"
            app:tint="#E65100" />
    </RelativeLayout>

    <!-- ðŸ” Search Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etSearch"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Search in favourites..."
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="ðŸ”" />
    </LinearLayout>

    <!-- â¤ï¸ Favourite Recipes List -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/favContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" />
    </ScrollView>

</LinearLayout>
